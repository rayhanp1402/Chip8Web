{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", 
    "moduleResolution": "node", 
    "strict": true,
    "allowJs": false,
    "outDir": "./scripts/out",
    "rootDir": "./scripts/src",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],  // Ensures browser-based environment
    "types": ["vite/client"]  
  },
  "include": ["scripts/src/**/*"],  // Ensure all TS files are included
  "exclude": ["node_modules", "dist"]
}
